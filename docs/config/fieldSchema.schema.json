{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Field Schema Definition",
  "type": "object",
  "required": ["version", "fields"],
  "properties": {
    "version": {"type": "string"},
    "generated": {"type": "string"},
    "fields": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["internalName", "displayLabel", "dataType", "fallback"],
        "properties": {
          "internalName": {"type": "string", "minLength": 1},
          "displayLabel": {"type": "string"},
          "section": {"type": "string"},
          "category": {"type": "string"},
          "dataType": {"type": "string"},
          "choice": {"type": "boolean"},
            "requiresValueSuffix": {"type": "boolean"},
          "phi": {"type": "boolean"},
          "sensitivity": {"type": "string", "enum": ["Low", "Moderate", "High"]},
          "fallback": {"type": "string"}
        }
      }
    }
  }
}
